#!/usr/bin/env bash
# Bash script that displays the content of the file /etc/passwd, using the while
# loop + IFS.

IFS=":"

while read -r u_name passwd uid gid u_info home shell; do
	echo "
	The user $u_name is part of the $gid gang, lives in $home and
	rides $shell.
	$uid's place is protected by the passcode $passwd, more info about the
	user here: $u_info
	"
done < /etc/passwd

unset IFS
